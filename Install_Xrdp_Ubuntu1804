
-----Install Xrdp-------

apt-get update -y && apt-get install xrdp -y && apt-get install xfce4 -y

apt-get install xfce4-terminal -y && apt-get install gnome-icon-theme-full tango-icon-theme -y

sed -i.bak '/fi/a #xrdp multiple users configuration \n xfce-session \n' /etc/xrdp/startwm.sh
apt install ufw -y && ufw allow 3389/tcp && apt install firewalld -y && apt install firewalld -y 

firewall-cmd --add-port=3389/tcp --permanent firewall-cmd --reload

>> https://www.tecmint.com/fix-firewall-cmd-command-not-found-error/

/etc/init.d/xrdp restart

-----Install firefox-----
apt install firefox -y


-----Setting up RDP with Xfce change port for 3390-----
sed -i 's/port=3389/port=3395/g' /etc/xrdp/xrdp.ini
/etc/init.d/xrdp restart


 
 docker run -d -it -p 3390:3390 --name=v2 --restart=always -v ubuntu_v2_data:/data ubuntu:18.04
 
